#!/bin/sh

export INSTALLDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
PLUGINDIR=/dev/null

JAVA_HOME=$(/usr/libexec/java_home -v 1.8)

CLASSPATH=$(JARS=($INSTALLDIR/lib/*.jar); IFS=:; echo "${JARS[*]}")

PLUGINS=

for i in `find $PLUGINDIR -name lib 2>/dev/null`; do
  PLUGINS=$PLUGINS:$i/\*
done

if [ -z "$1" ]; then
  input=-
else
  input=$1
  shift
fi

$JAVA_HOME/bin/jjs -Dokhttp.platform=conscrypt $VMOPTS $BCP -classpath "$CLASSPATH$PLUGINS" -scripting $INSTALLDIR/scripts/oksocial.js $input -- "$@"
