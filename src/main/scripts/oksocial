#!/bin/sh

CMD=$(basename $0)

export INSTALLDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
PLUGINDIR=/dev/null

JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
JAVA_CMD=$JAVA_HOME/bin/java

PLUGINS=

for i in `find $PLUGINDIR -name lib 2>/dev/null`; do
  PLUGINS=$PLUGINS:$i/\*
done

$JAVA_CMD -Dokhttp.platform=conscrypt $BCP $VMOPTS -classpath $INSTALLDIR/lib/\*$PLUGINS -Dcommand.name=$CMD com.baulsupp.oksocial.Main "$@"
