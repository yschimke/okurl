#!/bin/sh

CMD=$(basename $0)

export INSTALLDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
PLUGINDIR=/dev/null

JAVA_CMD=java
if [ -x /usr/libexec/java_home ]; then
  JAVA_HOME=$(/usr/libexec/java_home -v 9 2>/dev/null)
  
  if [ $? -ne 0 ]; then
    JAVA_HOME=$(/usr/libexec/java_home -v 1.8 2>/dev/null)
  else
    VMOPTS="--add-opens=java.base/sun.net.dns=ALL-UNNAMED --add-opens=java.base/java.lang.reflect=ALL-UNNAMED --add-opens=java.base/java.lang=ALL-UNNAMED --add-opens=java.base/java.nio=ALL-UNNAMED --add-opens=java.base/sun.nio.ch=ALL-UNNAMED --add-opens=java.base/java.net=ALL-UNNAMED"
  fi
  
  JAVA_CMD=$JAVA_HOME/bin/java
fi

PLUGINS=

for i in `find $PLUGINDIR -name lib 2>/dev/null`; do
  PLUGINS=$PLUGINS:$i/\*
done

$JAVA_CMD -Dio.netty.processId=$$ $VMOPTS -classpath $INSTALLDIR/lib/\*$PLUGINS -Dcommand.name=$CMD com.baulsupp.oksocial.Main "$@"
